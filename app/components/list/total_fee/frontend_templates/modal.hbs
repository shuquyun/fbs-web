<div class="modal modal-template-fee-manage" data-item="{{json data}}">
  <div class="modal-header">
    <h2>专业暂估价条目配置</h2>
  </div>
  <div class="tmpl-item">
    <div class="modal-body">
      <form id="tmpl-item-form" class="form form-aligned">
        <input type="hidden" name ="id" value="{{data.id}}">

        <fieldset>

          <div class="control-group">
            <label for="name">项目名称:</label>
            <input id="name" type="text" name="name" value="{{data.name}}" readonly>
          </div>
          <div class="control-group">
            <label for="projectFeature">计算基础:</label>
            <input id="projectFeature" type="text" name="projectFeature" value="{{data.projectFeature}}" >
          </div>
          <div class="control-group">
            <label for="valuationBase">计算基数:</label>
            <input id="valuationBase" type="text" name="valuationBase" value="{{data.valuationBase}}" required>
          </div>
          <div class="control-group">
            <label for="feeRate">费率:</label>
            <input id="feeRate" type="text" name="feeRate" value="{{data.feeRate}}" required>
          </div>
          <div class="control-group">
            <label for="fee">金额（元）:</label>
            <input id="fee" type="text" name="fee" value="{{data.fee}}" required>
          </div>

          <div class="control-group">
            <label for="remark">备注:</label>
            <input id="remark" name="remark" type="text" value="{{data.remark}}" required>
          </div>
        </fieldset>

      </form>

    </div>
    <div class="modal-footer">
      <button class="btn btn-success btn-medium js-submit-tmpl-item-button" type="button" data-least-id="{{leastId}}">提交</button>
      <button class="btn btn-medium btn-info close js-close-modal-div" type="button">关闭</button>
    </div>
  </div>
</div>
