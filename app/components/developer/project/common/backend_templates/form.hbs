<form class="form form-aligned form-common form-project js-form-project">
  <fieldset>
    <input type="hidden" name="companyId" value="{{_USER_.companyId}}">
    <div class="clearfix">
      <div class="form-left">
        <div class="control-group">
          <label class="group-title"><b class="required">*</b>项目名称</label>
          <div class="group-content">
            <input type="hidden" name="id" value="{{id}}">
            <input type="text" name="name" value="{{name}}" placeholder="请输入项目名称" maxLength="25" pattern="^.{2,25}$" required>
            <span class="note-error">x 2-25个字符</span>
            <span class="note-error-empty">x 不能为空</span>
          </div>
        </div>
        <div class="control-group">
          <label class="group-title"><b class="required">*</b>占地面积</label>
          <div class="group-content">
            <input type="text" name="floorArea" class="js-input-number" placeholder="请输入占地面积" pattern="^\d{1,3}(,\d{3}){0,3}$" value="{{#if floorArea}}{{formatNumber floorArea}}{{/if}}" required>
            <span class="units">平方米</span>
            <span class="note-error">x 1-12位正整数</span>
            <span class="note-error-empty">x 不能为空</span>
          </div>
        </div>
        <div class="control-group">
          <label class="group-title"><b class="required">*</b>所在地区</label>
          <div class="group-content select-small">
            <select class="address-select" name="provinceId" data-level="1">
              <option value="{{provinceId}}">请选择</option>
            </select>
            <select class="address-select" name="cityId" data-level="2">
              <option value="{{cityId}}">请选择</option>
            </select>
          </div>
        </div>
      </div>
      <div class="form-right">
        <div class="control-group">
          <label class="group-title"><b class="required">*</b>业态类型</label>
          <div class="group-content">
            <select class="select" name="type" data-parent=".group-content" required>
              <option value="">请选择</option>
              <option value="1" {{#equals type 1}}selected{{/equals}}>住宅</option>
              <option value="2" {{#equals type 2}}selected{{/equals}}>商业</option>
              <option value="3" {{#equals type 3}}selected{{/equals}}>旅游</option>
              <option value="4" {{#equals type 4}}selected{{/equals}}>综合体</option>
            </select>
            <span class="note-error-empty">x 不能为空</span>
          </div>
        </div>
        <div class="control-group">
          <label class="group-title"><b class="required">*</b>建筑面积</label>
          <div class="group-content">
            <input type="text" name="buildingArea" class="js-input-number" placeholder="请输入建筑面积" pattern="^\d{1,3}(,\d{3}){0,3}$" value="{{#if buildingArea}}{{formatNumber buildingArea}}{{/if}}" required>
            <span class="units">平方米</span>
            <span class="note-error">x 1-12位正整数</span>
            <span class="note-error-empty">x 不能为空</span>
          </div>
        </div>
      </div>
    </div>
    <div class="control-group">
      <label class="group-title"><b class="required">*</b>详细地址</label>
      <div class="group-content">
        <input type="text" class="input-large" name="addressDetail" placeholder="请输入详细地址" value="{{addressDetail}}" pattern="^[\s\S]{5,50}$" maxLength="50" required>
        <span class="note-error">x 详细地址在5-50个字符之间</span>
        <span class="note-error-empty">x 不能为空</span>
      </div>
    </div>
    <div class="project-description">
      <div class="control-group">
        <label class="group-title">&nbsp;&nbsp;项目描述</label>
        <div class="group-content">
          <textarea type="text" class="input-large" name="description" placeholder="请输入项目描述" value="{{description}}" pattern="^[\s\S]{0,200}$" maxLength="200">{{description}}</textarea>
          <span class="note-error">x 描述在0-200个字符之间</span>
        </div>
      </div>
    </div>
    <div class="control-group image-area">
      <label class="group-title">&nbsp;&nbsp;项目图片</label>
      <div class="group-content-top">
        <ul class="images-list js-images-list clearfix">
            {{#each pics}}
              <li class="pull-left margin-right-20">
                <img src="{{this}}" alt="" width="150" height="150" />
                <input type="hidden" name="pics" value="{{this}}">
                <div class="center-text">
                  <a href="javascript:;" class="js-image-delete">删除</a>
                </div>
              </li>
            {{/each}}
          <li class="pull-left btn btn-upload upload-content">
            <input type="file" name="file" class="js-upload-file">
            <i class="icon-feebas icon-feebas-jiahao1"></i>
          </li>
          <span class="note-hint">支持*.jpg、*.png、*.gif、*.jpeg、 *.bmp格式</span>
        </ul>
      </div>
    </div>
    <div class="control-submit">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </fieldset>
</form>
