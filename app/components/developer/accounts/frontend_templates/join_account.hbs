<div class="modal sub-user-modal">
  <div class="modal-header">
    <h2>绑定新用户</h2>
  </div>
  <form class="form form-aligned js-join-account-form">
    <div class="modal-dialog">
      <div class="control-group">
        <label><span class="required">*</span>用户名:</label>
        <input class="input-medium js-join-user" name="username" type="text" placeholder="请输入用户名" required>
      </div>
      <div class="control-group js-have-exist hide">
        <input class="js-user-id" value="" name="userId" type="hidden">
        <label><span class="required">*</span>角色名称:</label>
        <select class="js-join-select-role" name="roleId">
          {{#each auth}}
            <option value="{{id}}" title="{{desc}}">{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="control-group js-have-exist hide">
        <label>备注:</label>
        <textarea name="remark"></textarea>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn btn-medium btn-success js-join-account-submit" type="submit">查找用户</button>
      <button class="btn btn-info btn-medium close" type="button">取消</button>
    </div>
  </form>
</div>
