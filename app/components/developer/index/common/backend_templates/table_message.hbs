<div class="message-group">
  <div class="message-title">
    <span>未读消息（{{unReadCount}}）</span>
    <a href="javascript:;" class="btn btn-primary pull-right js-message-set">标记为已读</a>
  </div>
  <div class="message-content">
    <table class="table">
      <thead>
        <tr>
          <th width="10%">
            <input type="checkbox" class="input-checkbox js-checkbox-main">
            全选
          </th>
          <th width="5%">序号</th>
          <th width="17%">项目名称</th>
          <th width="25%">消息主题</th>
          <th width="15%">接收时间</th>
          <th width="8%">消息状态</th>
          <th width="10%">发起人</th>
          <th width="10%">操作</th>
        </tr>
      </thead>
      <tbody>
        {{#if data}}
          {{#each data}}
            <tr class="js-message-tr">
              <td>
                <input type="checkbox" class="input-checkbox" data-id="{{id}}" data-msg-read="{{msgRead}}">
              </td>
              <td>{{add @index 1}}</td>
              <td>{{projectName}}</td>
              <td>{{topic}}</td>
              <td>{{formatDate createdAt}}</td>
              <td {{#unless msgRead}}class="td-active"{{/unless}}>{{#if msgRead}}已读{{else}}未读{{/if}}</td>
              <td>{{createdName}}</td>
              <td>
                <a href="javascript:;" class="js-message-show" data-id="{{id}}" data-msg-read="{{msgRead}}" data-type="{{msgType}}" data-extra="{{json extra}}">查看详情</a>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="8" class="center-text">暂无消息！</td>
          </tr>
        {{/if}}
      </tbody>
    </table>
    <div>
      {{#if total}}
        {{inject "common/pagination" total=total}}
      {{/if}}
    </div>
  </div>
</div>
