<div class="bids-content content-border">
  <form class="form-aligned form form-common form-bids-open js-form-bids-open" data-users="{{json companyUsers}}">
    <div class="control-group">
      <label class="group-title"><b class="required">*</b>采购经办人</label>
      <span>{{lastIssued.bidOperator}}</span>
      <input type="hidden" name="bidId" value="{{bidId}}">
    </div>
    {{#with lastIssued}}
      {{#of ../bidStatus "10,11,12,13"}}
        {{#of ../supplementFileStatus "1,3"}}
          {{> component:developer/bids/publish_answer/common/all_templates/_form}}
        {{else}}
          {{> component:developer/bids/publish_answer/common/all_templates/_form_readonly}}
        {{/of}}
      {{else}}
        {{> component:developer/bids/publish_answer/common/all_templates/_form_readonly}}
      {{/of}}
    {{/with}}
    {{#gt issuedBids.length 1}}
      <div class="control-group">
        <button class="btn btn-info btn-medium" disabled>已发标</button>
        {{#of bidStatus "11,12,13"}}
          {{#of supplementFileStatus "1,3"}}
            <button class="btn btn-primary btn-medium" type="submit">{{issuedBids.length}}次发标</button>
          {{/of}}
        {{/of}}
      </div>
    {{else}}
      <div class="margin-left-20 margin-bottom-20">
        <button class="btn btn-primary btn-medium" type="submit">发标</button>
      </div>
    {{/gt}}
  </form>
</div>
