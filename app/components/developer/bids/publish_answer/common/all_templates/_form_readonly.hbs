<div class="clearfix">
  <div class="group-left">
    <div class="control-group">
      <label class="group-title"><b class="required">*</b>答疑截止时间</label>
      <input type="hidden" name="id" value="{{id}}">
      <input type="text" name="qaDeadline" placeholder="答疑截止时间" value="{{qaDeadline}}" readonly>
    </div>
  </div>
  <div class="group-right">
    <div class="control-group">
      <label class="group-title"><b class="required">*</b>回标截止时间</label>
      <input type="text" name="backBidDeadline" placeholder="回标截止时间" value="{{backBidDeadline}}" readonly>
    </div>
  </div>
</div>
<div class="clearfix">
  <div class="group-left">
    <div class="control-group">
      <label class="group-title"><b class="required">*</b>开标方式</label>
        <input type="text" name="openType" value="{{#equals openType 0}}手动开标{{/equals}}{{#equals openType 1}}自动开标{{/equals}}" readonly>
    </div>
  </div>
  <div class="group-right js-switch-group">
    {{#equals openType 1}}
      <div class="control-group">
        <label class="group-title"><b class="required">*</b>开标时间</label>
        <input type="text" name="autoOpenDate" placeholder="开标时间" value="{{autoOpenDate}}" readonly>
      </div>
    {{else}}
      <div class="control-group">
        <label class="group-title"><b class="required">*</b>开标人</label>
        <input type="text" class="js-bids-person-open" name="openOperatorIds" placeholder="请选择开标人" value="{{openOperatorIds}}" readonly>
      </div>
    {{/equals}}
  </div>
</div>
