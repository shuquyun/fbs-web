{{#component "elevator-floor js-comp"}}
  <div class="floor-item js-floor-item" data-name="{{floorName}}" data-id="js-floor-{{floorName}}" {{#if _DESIGN_MODE_}}data-design="true"{{/if}}>
    <div class="floor-header">
      <div class="floor-info">
        <span class="floor-index js-floor-index"></span>
        {{floorName}}
      </div>
      <div class="floor-extend"></div>
    </div>
    <div class="floor-body clearfix">
      <div class="floor-image">
        <a href="javascript:void(0);">
          <img src="{{mainImg}}" alt="{{floorName}}" />
        </a>
      </div>
      <div class="floor-products">
        <ol class="products-list clearfix">
          {{#each _DATA_}}
            <li class="product-item clearfix">
              <a href="/items/{{id}}">
                <img class="product-image" src="{{cdnPath mainImage '330'}}" alt="">
                <div class="product-info">
                  <p class="product-name">{{name}}</p>
                  <p class="product-price">
                    <span class="currency">￥{{formatPrice lowPrice 0}}</span>/{{extra.unit}}
                  </p>
                  <p class="product-sale">销量 {{#if saleQuantity}}{{saleQuantity}}{{else}}0{{/if}} {{extra.unit}}</p>
                </div>
              </a>
            </li>
          {{/each}}
        </ol>
      </div>
      <div class="floor-brands">
        <p class="brands-title">精选品牌</p>
        <ol class="brand-list clearfix">
          {{#each _BRAND_DATA_}}
            <li class="brand-item">
              <a href="/search?bid={{id}}">
                <p>
                  <img src="{{logo}}" alt="" />
                </p>
                <p class="brand-name">{{name}}</p>
              </a>
            </li>
          {{/each}}
        </ol>
      </div>
    </div>
  </div>
{{/component}}
