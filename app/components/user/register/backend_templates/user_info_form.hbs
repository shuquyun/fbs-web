<fieldset>
  <div class="control-group">
    <label><span class="required">*</span>手机号:</label>
    <input type="text" id="mobile-phone" class="input-medium" name="mobile" placeholder="请输入手机号" pattern="^1[34578]\d{9}$" required>
    <span class="note-error"></span>
    <span class="note-error-empty"><i>&times;</i> 手机号不可为空</span>
    <span class="note-success"></span>
  </div>
  <div class="control-group email-group">
    <label><span class="required">*</span>验证码:</label>
    <input type="text" class="input-medium" name="code" placeholder="请输入验证码" maxlength="6" required>
    <button type="button" class="btn btn-info get-code js-get-code" data-delay="60" disabled="ture">获取验证码</button>
    <span class="note-error-empty"><i>&times;</i> 验证码不可为空</span>
  </div>
  <div class="control-group">
    <label><span class="required">*</span>姓名:</label>
    <input type="text" class="input-medium" name="realName" placeholder="请输入您的真实姓名" required>
    <span class="note-error-empty"><i>&times;</i> 姓名不可为空</span>
  </div>
  <div class="control-group">
    <label><span class="required">*</span>邮箱:</label>
    <input type="text" id="email" class="input-medium" name="email" placeholder="请输入您的邮箱" pattern="^(\w-*\.*)+@(\w-?)+(\.\w{2,})+$" required>
    <span class="note-error"></span>
    <span class="note-error-empty"><i>&times;</i> 邮箱不可为空</span>
  </div>
  <div class="control-group">
    <label><span class="required">*</span>密码:</label>
    <input type="password" id="password" class="input-medium" name="password" placeholder="请设置输入密码" pattern="^[\s\S]{6,16}$" required>
    <span class="note"><i>&times;</i> 请输入(6-16)位的任意字符与数字</span>
    <span class="note-error"><i>&times;</i> 请输入(6-16)位的任意字符与数字</span>
    <span class="note-error-empty"><i>&times;</i> 密码不可为空</span>
  </div>
  <div class="control-group">
    <label for="password"></label>
    <ul class="password-level">
      <li class="level-weak">
        <div class="weak-bar"><span>弱</span></div>
      </li>
      <li class="level-middle">
        <div class="middle-bar"><span>中</span></div>
      </li>
      <li class="level-strong">
        <div class="strong-bar"><span>高</span></div>
      </li>
    </ul>
  </div>
  <div class="control-group">
    <label><span class="required">*</span>确认密码:</label>
    <input type="password" id="confirm-password" class="input-medium" placeholder="请确认输入密码" required>
    <span class="note-error"><i class="icon-hsh icon-hsh-tanhao"></i> 两次密码不一致</span>
    <span class="note-success"><i class="icon-hsh icon-hsh-gou1"></i> 两次密码一致</span>
  </div>
  <div class="control-group">
    <label></label>
    <button type="submit" class="btn input-medium">下一步</button>
  </div>
</fieldset>
