{{#component "register-success"}}
  {{#equals _USER_.status '1'}}
    {{> component:user/register_result/backend_templates/wait_success}}
  {{/equals}}
  {{#equals _USER_.status '-5'}}
    {{> component:user/register_result/backend_templates/waiting}}
  {{/equals}}
  {{#equals _USER_.status '-6'}}
    {{> component:user/register_result/backend_templates/wait_failed}}
  {{/equals}}
{{/component}}
