{{#component "component-shop-inner-search js-comp"}}
<div class="search-title">{{i18n "The Shop Search" bundle="shop_design"}}</div>
<div class="shop-inner-search">
  <div class="search-body">
    <form class="form form-aligned" id="js-shop-inner-search-form" data-shop-id="{{shopId}}">
      <fieldset>
        <div class="control-group">
          <label for="">{{i18n "Keywords" bundle="shop_design"}}：</label>
          <input type="text" class="input-word" name="q" value="{{q}}">
        </div>
        <div class="control-group">
          <label for="">{{i18n "Price" bundle="shop_design"}}：</label>
          <input class="input-price" type="number" name="p_f" value="{{formatPrice p_f}}">
          -
          <input class="input-price" type="number" name="p_t" value="{{formatPrice p_t}}">
        </div>
        <div class="control-group">
          <div class="controls">
            <button class="btn btn-primary" type="submit">
              <i class="icon-pokeball icon-pokeball-search"></i>
            </button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
{{/component}}
