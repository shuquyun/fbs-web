<ul class="{{#equals id 0}}tree-list{{else}}tree-children{{/equals}} js-tree-children" data-id="{{id}}" data-name="{{json this}}">
  {{#if add}}
    {{> common/tree_comp/frontend_templates/_new_item}}
  {{/if}}
  {{#if (size children)}}
    {{#each children}}
      {{> common/tree_comp/frontend_templates/_tree_item}}
    {{/each}}
  {{else}}
    {{#equals id 0}}
      {{> common/tree_comp/frontend_templates/_tree_item}}
    {{/equals}}
  {{/if}}
</ul>

