<div class="bids-group">
  <div class="bids-title">
    <label>答疑附件</label>
  </div>
  <div class="bids-content content-border clearfix">
    {{#if answerAccessory}}
      {{#each answerAccessory}}
        <div class="pull-left margin-right-20 margin-bottom-20">
          <div class="bids-file">
            <div class="file-img">
              <i class="icon-hsh icon-hsh-file"></i>
            </div>
            <div class="file-info">
              <div class="title" title="（第{{answerTimes}}次答疑）{{filename}}">（第{{answerTimes}}次答疑）{{filename}}</div>
              <div class="date">
               <span>{{formatDate createdAt}}</span>
               <a href="http:{{fileUrl}}" class="pull-right">
                <i class="icon-hsh icon-hsh-xiazai"></i>
               </a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="center-text margin-bottom-10">暂无答疑附件！</div>
    {{/if}}
  </div>
</div>
