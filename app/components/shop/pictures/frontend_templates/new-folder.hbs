<div class="modal">
  <div class="modal-header">
    <h2>添加新文件夹</h2>
  </div>
  <form class="form form-aligned folder-form">
    <div class="modal-dialog" style="padding-right: 80px;">
      <div class="control-group">
        <label><span class="required">*</span>文件夹名:</label>
        <input name="folder" type="text" value="" required />
        <input type="hidden" name="pathType" value="">
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn btn-medium btn-success" type="submit">确定</button>
      <button class="btn btn-medium close" type="button">取消</button>
    </div>
  </form>
</div>
