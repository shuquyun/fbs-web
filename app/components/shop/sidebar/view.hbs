{{#inject "user/sidebar_container"}}
  {
    "_DATA_": {
      "name": "Seller Dashboard",
      "navs": [
        {
          "name": "Orders Management",
          "icon": "icon-feebas icon-feebas-fapiaoguanli",
          "auth": "manage_order,manage_refund,manage_review",
          "children": [
            {
              "name": "Orders Management",
              "href": "/seller/order",
              "auth": "manage_order"
            },
            {
              "name": "Return Refund Center",
              "href": "/seller/sku-return",
              "auth": "manage_refund"
            },
            {
              "name": "Reviews",
              "href": "/seller/comments",
              "auth": "manage_review"
            }
          ]
        },
        {
          "name": "Products Management",
          "icon": "icon-feebas icon-feebas-shangpinguanli",
          "auth": "create_item,list_item,delist_item,manage_shop_category,sort_item",
          "children": [
            {
              "name": "Add product",
              "href": "/seller/release-items",
              "auth": "create_item"
            },
            {
              "name": "Products listed for sales",
              "href": "/seller/on-shelf",
              "auth": "list_item"
            },
            {
              "name": "Unlisted",
              "href": "/seller/off-shelf",
              "auth": "delist_item"
            },
            {
              "name": "Category Management",
              "href": "/seller/shop-category",
              "auth": "manage_shop_category"
            },
            {
              "name": "Good Classify",
              "href": "/seller/item-sort",
              "auth": "sort_item"
            }
          ]
        },
        {
          "name": "Marketing Management",
          "icon": "icon-feebas icon-feebas-kttx",
          "auth": "create_activity",
          "children": [
            {
              "name": "Activity create",
              "href": "/seller/marketing/activity-index",
              "auth": "create_activity"
            }
          ]
        },
        {
          "name": "Store Management",
          "icon": "icon-feebas icon-feebas-gongyingshangguanli",
          "auth": "design_shop,view_shop_profile",
          "children": [
            {
              "name": "Edit Store",
              "href": "/system/sites",
              "auth": "design_shop",
              "blank": true
            },
            {
              "name": "Store info",
              "href": "/seller/profile",
              "auth": "view_shop_profile"
            }
          ]
        },
        {
          "name": "Shipping Management",
          "icon": "icon-feebas icon-feebas-wuliu",
          "auth": "manage_freight",
          "children": [
            {
              "name": "Delivery Fee Templates Management",
              "href": "/seller/freight",
              "auth": "manage_freight"
            }
          ]
        },
        {
          "name": "Authorities Management",
          "icon": "icon-feebas icon-feebas-quanxianguanli",
          "auth": "manage_seller_role,manage_seller_sub",
          "children": [
            {
              "name": "Role management",
              "href": "/seller/auth",
              "auth": "manage_seller_role"
            },
            {
              "name": "Sub account management",
              "href": "/seller/accounts",
              "auth": "manage_seller_sub"
            }
          ]
        },
        {
          "name": "Settlements Management",
          "icon": "icon-feebas icon-feebas-jiesuanzhongxin",
          "auth": "manage_settle_order_sum,manage_settle_order_detail,manage_settle_refund_detail",
          "children": [
            {
              "name": "Order daily sum",
              "href": "/seller/settlement/order-sum",
              "auth": "manage_settle_order_sum"
            },
            {
              "name": "Settle order detail",
              "href": "/seller/settlement/order-detail",
              "auth": "manage_settle_order_detail"
            },
            {
              "name": "Settle refund detail",
              "href": "/seller/settlement/refund-detail",
              "auth": "manage_settle_refund_detail"
            }
          ]
        }
      ]
    }
  }
{{/inject}}
